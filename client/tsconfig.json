{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "outDir": "app",
        "rootDir": "src",
        "noImplicitAny": false,
        "noEmitOnError": true
    },
    "compileOnSave": false,
    "filesGlob": [
        "src/**/*.ts"
    ],
    "files": [
        "src/api/api.service.ts",
        "src/app.ts",
        "src/components/chat/chat.ts",
        "src/components/game/game.ts",
        "src/components/leaderboard/leaderboard.ts",
        "src/components/settings/settings.ts",
        "src/config/config.service.ts",
        "src/GameConstants.ts",
        "src/global.spec.ts",
        "src/index.ts",
        "src/sockets/sockets.service.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
